<script>
    function elfinderDialog(context) { // <------------------ +context
        var fm = $('<div/>').dialogelfinder({
            url: '@Url.Action("Connector", "ElFinder")',
            lang: 'en',
            width: 840,
            height: 450,
            destroyOnClose: true,
            uiOptions: { // UI buttons available to the user
                toolbar: [
                    ['home', 'up'],
                    ['mkdir', 'mkfile', 'upload'],
                    ['open', 'download'],
                    ['copy', 'cut', 'paste'],
                    ['rm'],
                    ['duplicate', 'rename', 'edit'],
                    ['view', 'sort']
                ]
            },
            getFileCallback: function (file, fm) {
                console.log(file);
                // $('.editor').summernote('editor.insertImage', fm.convAbsUrl(file.url)); ...before
                context.invoke('editor.insertImage', fm.convAbsUrl(file.url)); // <------------ after
            },
            commandsOptions: {
                getfile: {
                    oncomplete: 'close',
                    folders: false
                }
            }
        }).dialogelfinder('instance');
    }
</script>
